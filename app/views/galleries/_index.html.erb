<div class="galleries__box">
    <% @galleries.each do |gallery| %>
      <div class="galleies__items">
        <div class="galleries__image_box">
          <%= attachment_image_tag gallery, :image, format: 'jpg', fallback: "no-image.jpeg", class:"galleries__image_item" %>
          <span class="galleries__image_title"><%= gallery.title %></span>
        </div>
        <%= link_to gallery_path(gallery.id) do %>
          <%= l gallery.created_at %>
        <% end %>
      </div>
    <% end %>
</div>