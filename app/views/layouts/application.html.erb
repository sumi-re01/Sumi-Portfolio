                    <%= link_to 'GALLERY', galleries_path %>
                  </li>
                  <li class="nav-list">
                    <%= link_to 'LOG IN',  new_user_session_path %>
                  </li>
                  <li class="nav-list">
                    <%= link_to 'FIRST VISIT', new_user_registration_path %>
